
<%= form_for @ballot do |f| %>
	<%= f.label :title %>
	<%= f.text_field :title %>
	<%= f.label :description %>
	<%= f.text_area :description %><br />
	<%= f.label :end_time %>
	<%= f.date_time :end_time %><br />
	<hr />
	
	<%= f.check_box :_destroy %>
  	<%= f.label :_destroy, "Remove Ballot" %>
	<%= f.submit "Save ballot", class: "btn btn-primary" %>
<% end %>

