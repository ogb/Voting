
<%= form_for @ballot do |f| %>
	<%= f.label :title %>
	<%= f.text_field :title %>
	<%= f.label :description %>
	<%= f.text_area :description %><br />
	<%= f.label :end_time %>
	<%= f.date_time :end_time %><br />
	<hr />
	<%= f.fields_for :candidates do |builder| %>
  		<%= render 'add_candidate_fields', f: builder %>
	<% end %>
	<%= link_to_add_fields "Add Candidate", f, :candidates %>
	<hr />
	<%= f.fields_for :users do |builder| %>
  		<%= render 'user_fields', f: builder %>
	<% end %>
	<%= link_to_add_fields "Add Voter", f, :users %>
	<br />
	<%= f.check_box :_destroy %>
  	<%= f.label :_destroy, "Remove Ballot" %>
	<%= f.submit "Save ballot", class: "btn btn-primary" %>
<% end %>

