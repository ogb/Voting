
<div id="mod-ballot-form" class="span6 offset3" >
<%= simple_form_for @ballot do |f| %>
	<%= f.label :title %>
	<%= f.text_field :title %>
	<%= f.label :description %>
	<%= f.text_area :description %>
	<%= f.label :end_time %>
	<%= f.text_field :end_time, class: "datepicker" %>
	<hr />
	<%= f.fields_for :candidates do |builder| %>
	<%= render 'candidate_fields', f: builder %>
	<% end %>
	<%= link_to_add_fields "Add Candidate", f, :candidates %>
	<hr />
	<%= f.check_box :_destroy %>
	<%= f.label :_destroy, "Remove Ballot" %>
	<%= f.button :submit %>
<% end %>
</div>
